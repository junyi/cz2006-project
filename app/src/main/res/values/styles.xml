<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/color_red_accent</item>
        <item name="windowActionBar">false</item>
        <!--<item name="colorAccent">@color/accent</item>-->

    </style>

    <style name="TextAppearance.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:minWidth">88.0dip</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.Holo.ProgressBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:indeterminate">true</item>
        <item name="cpb_color">@color/color_red_accent</item>
        <item name="cpb_max_sweep_angle">300</item>
        <item name="cpb_min_sweep_angle">10</item>
        <item name="cpb_rotation_speed">1.0</item>
        <item name="cpb_stroke_width">4dp</item>
        <item name="cpb_sweep_speed">1.0</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:max">5</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

    <style name="HorizontalProgressBarStyle.Secondary" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:max">5</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

    <style name="ButtonStyle" parent="DialogButtonStyle" />

    <style name="TextAppearance.RobotoMedium" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

</resources>
